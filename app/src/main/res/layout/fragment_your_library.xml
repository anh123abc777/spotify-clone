<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.tonezone.yourlibrary.YourLibraryViewModel" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".yourlibrary.YourLibraryFragment"
        android:orientation="vertical"
        android:padding="8dp"
        >


        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            app:liftOnScrollTargetViewId="@id/toolbar"
            android:paddingBottom="8dp"
            app:liftOnScroll="true"
            >

                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:title="Your Library"
                    android:elevation="0dp"
                    app:layout_scrollFlags="scroll"
                    app:menu="@menu/appbar_yourlibrary_menu"
                    >
                    <EditText
                        android:id="@+id/search_bar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:hint="@string/search_your_library"
                        />
                </com.google.android.material.appbar.MaterialToolbar>

            <include
                android:id="@+id/chip_group"
                layout="@layout/chipgroup_yourlibrary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                />

            <RelativeLayout
                    android:id="@+id/arrangement_frame"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                app:layout_scrollFlags="scroll"
                    >

                    <ImageView
                        android:id="@+id/sort_icon"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentStart="true"
                        android:src="@drawable/ic_swap"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/sort_icon"
                        android:layout_marginStart="8dp"
                        android:textSize="14sp"
                        android:onClick="@{() -> viewModel.changeSortOption()}"
                        android:text="@{viewModel.sortOption.toString()}"/>

                    <ImageView
                        android:id="@+id/display_option"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/ic_grid"
                        />

                </RelativeLayout>


        </com.google.android.material.appbar.AppBarLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/your_library_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="vertical"
            artistData="@{viewModel.followedArtists}"
            playlistData="@{viewModel.userPlaylists}"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>