<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.tonezone.player.PlayerScreenViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".player.PlayerScreenFragment"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white"
        >

        <androidx.cardview.widget.CardView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:elevation="8dp"
            app:cardElevation="8dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="360dp"
                android:layout_gravity="center_horizontal"
                imageUrl="@{viewModel.imgUri}"
                />
<!-- imageUrl="@{viewModel.song.thumbnail}" -->
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            >
            <TextView
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:id="@+id/songName"
                android:textSize="20sp"
                android:text="gido"
                />
            <!--            android:text="@{viewModel.song.name}"-->

            <TextView
                android:id="@+id/artists"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="cai gi do khac"
                />
            <!--            android:text="@{viewModel.song.artists_names}"-->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fullSeekBar"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <SeekBar
                android:id="@+id/simpleSeekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_centerInParent="true"
                />
<!--            android:max="@{viewModel.song.duration}"
                android:progress="@{viewModel.progress}"
-->


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="0:00"
                    android:layout_marginBottom="8dp"
                    />
<!--                formatTime="@{viewModel.progress}"-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4:00"
                    android:layout_alignParentRight="true"/>
<!--                formatTime="@{viewModel.song.duration}"-->

            </RelativeLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip_previous"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_previous"
                android:layout_toLeftOf="@id/play"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:onClick="@{() -> viewModel.onPrevious()}"
                />

<!--            android:onClick="@{() -> viewModel.onPrevious()}"-->

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/play"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/ic_custom_play"
                android:layout_centerInParent="true"
                android:onClick="@{() -> viewModel.onPlay()}"
                />

<!--            android:onClick="@{() -> viewModel.onChangeState()}"-->


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/skip_next"
                android:layout_width="32dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_next"
                android:layout_toRightOf="@id/play"
                android:layout_marginStart="16dp"
                android:layout_centerVertical="true"
                android:onClick="@{() -> viewModel.onNext()}"
                />
<!--            android:onClick="@{() -> viewModel.onNext()}"-->

        </RelativeLayout>

    </LinearLayout>

</layout>