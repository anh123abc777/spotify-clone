<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="track"
            type="com.example.tonezone.network.Track" />
        <variable
            name="clickListener"
            type="com.example.tonezone.adapter.OnClickListener" />
    </data>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:onClick="@{() ->clickListener.onClick(track)}"
            android:paddingStart="8dp"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/frameThumbnail"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                >
                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    listImageUrl="@{track.album.images}"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@{track.name}"
                android:textSize="16dp"
                android:layout_toRightOf="@id/frameThumbnail"
                android:layout_marginStart="16dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="8dp"
                android:marqueeRepeatLimit="marquee_forever"
                android:ellipsize="marquee"
                android:scrollHorizontally="true"
                android:textColor="@color/black"

                />

            <TextView
                android:id="@+id/artists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                artists="@{track.artists}"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@id/frameThumbnail"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="12dp"/>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                app:tint="@color/colorSecondary"
                android:src="@drawable/ic_ver_more"
                />
        </RelativeLayout>
