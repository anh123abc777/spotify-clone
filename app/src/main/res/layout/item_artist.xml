<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="artist"
            type="com.example.tonezone.network.Artist" />
        <variable
            name="clickListener"
            type="com.example.tonezone.adapter.LibraryAdapter.OnClickListener" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="@{() -> clickListener.onClick(artist)}"
        >
        <!--        android:onClick="@{() -> clickListener.onClick(playlist)}"-->

        <androidx.cardview.widget.CardView
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="64dp"
            android:elevation="0dp"
        >

        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            listImageUrl="@{artist.images}"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"

            />
<!--            listImageUrl="@{artist.images}"
-->
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_alignParentTop="true"
            android:text="@{artist.name}"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:layout_below="@id/name_playlist"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textSize="14sp"
            android:text="@{artist.type}"
            android:textColor="@android:color/darker_gray"

            />

    </RelativeLayout>
</layout>